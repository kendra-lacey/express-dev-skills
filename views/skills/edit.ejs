  <title>Edit</title>
</head>
<body>
  <h1>Edit Skillz</h1>
  <form 
  action="/skills/<%= skill._id %>?_method=PUT"
  method="POST"
  autocomplete="off">
  <input value="<%= skill.text %>" type="text" name="text">
  <input <%= skill.knowledge ? 'checked' : '' %> type="checkbox"name="knowledge">
  <button type="submit">Update Skill</button>
  </form>
</body>
</html>